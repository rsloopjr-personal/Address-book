<h1>Groups</h1>
<div class="table-responsive">
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_groups.each do |contact_group| %>
      <tr>
        <td><%= link_to contact_group.group_name,  contact_group_path(contact_group), class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_contact_group_path(contact_group), remote: true %></td>
        <td><%= link_to 'Share', share_new_contact_group_path(contact_group), remote: true %></td>
        <td><%= link_to 'Destroy', contact_group, method: :delete, data: { confirm: "Are you sure? The #{contact_group.group_name} group contains #{pluralize(@contacts.count(), 'record')} which will be lost if you continue!" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Contact Group', new_contact_group_path,  remote: true %>