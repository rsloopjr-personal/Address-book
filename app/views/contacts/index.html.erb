<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-9">
      <h1>Contacts</h1>
      <div class="table-wrapper-scroll-y my-custom-scrollbar">
        <table class="table table-hover table-fixed-header">
          <thead>
            <tr>
              <th>First name</th>
              <th>Last name</th>
              <th>Phone number</th>
              <!-- <th>Contact picture</th> -->
              <th>Contact email</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          
          <% if @contacts.present? %>
            <tbody>
              <% @contacts.each do |contact| %>
                <tr>
                  <td><%= contact.first_name %></td>
                  <td><%= contact.last_name %></td>
                  <td><%= contact.phone_number %></td>
                  <!-- <td><%= contact.contact_picture %></td> -->
                  <td><%= contact.contact_email %></td>
                  <!-- <td><%= link_to 'Show', contact %></td> -->
                  <td><%= link_to 'Edit', edit_contact_path(contact), remote: true %></td>
                  <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          <% end %>
        </table>
        </div>
        <br>


        <%= link_to 'New Contact', new_contact_path, remote: true, class: "btn btn-primary" %>
        </div>
        <div class="col text-right">
          <%= link_to("Sign Out", destroy_user_session_path, :method => 'delete') %>
        </div>
      </div>
    </div>