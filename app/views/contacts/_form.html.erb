<%= bootstrap_form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      
      <% contact.errors.full_messages.each do |message| %>
        <p class="alert alert-danger"><%= message %></p>
      <% end %>
      
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, hide_label: true %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, hide_label: true %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, hide_label: true %>
  </div>

  <div class="field">
    <%= form.label :contact_picture %>
    <%= form.text_field :contact_picture, hide_label: true %>
  </div>

  <div class="field">
    <%= form.label :contact_email %>
    <%= form.text_field :contact_email, hide_label: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
