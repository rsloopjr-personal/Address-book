<p id="notice"><%= notice %></p>

<h1>Share Invites</h1>

<table>
  <thead>
    <tr>
      <th>Sharer</th>
      <th>Receiver</th>
      <th>Contact group</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_invites.each do |share_invite| %>
      <tr>
        <td><%= share_invite.sharer_id %></td>
        <td><%= share_invite.receiver_id %></td>
        <td><%= share_invite.contact_group_id %></td>
        <td><%= share_invite.status %></td>
        <td><%= link_to 'Show', share_invite %></td>
        <td><%= link_to 'Edit', edit_share_invite_path(share_invite) %></td>
        <td><%= link_to 'Destroy', share_invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

